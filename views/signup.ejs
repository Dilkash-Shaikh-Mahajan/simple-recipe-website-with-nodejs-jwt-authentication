<%- include('partials/header');-%>

<header>
    <div class="row mx-auto my-5">
        <div class="col-md-8 mx-auto">
            <!--Card Start-->
            <div class="card shadow">
                <div class="card-body p-5">

                    <div class="row">
                        <div class="col-md-4 my-5">
                            <img class="img-fluid" src="./img/sign_in.png" alt="Sign Up Form">
                        </div>
                        <div class="col-md-6 mt-5">
                            <h1 class="font-weight-bold mb-3">signUp Form!</h1>
                            <% if(typeof alert != 'undefined') { %>
                            <% alert.forEach(function(error) { %>
                            <div class="alert my-3 alert-warning alert-dismissible fade show" role="alert">
                                <%= error.msg %>
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <% }) %>
                            <% } %>
                            <form action="/signup" class="mt-3" method="post">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">fullName</label>
                                    <input type="text" name="fullName" class="form-control"
                                        placeholder="Enter Your fullName">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">UserName</label>
                                    <input type="text" name="userName" class="form-control"
                                        placeholder="Enter Your userName">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Email</label>
                                    <input type="email" name="email" class="form-control"
                                        placeholder="Enter Your Email">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Mobile Number</label>
                                    <input type="number" name="mobile" class="form-control" minlength="10"
                                        maxlength="10" placeholder="Enter Your Mobile Number">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Date Of Birth</label>
                                    <input type="date" min="1970-07-01" max="2005-12-31" name="birthday"
                                        class="form-control" placeholder="Enter Your Date Of Birth">
                                </div>

                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" name="password" class="form-control"
                                        placeholder="Enter Your Password">
                                </div>
                                <button type="submit" class="btn btn-outline-primary btn-block rounded">Submit</button>
                                <div class="d-flex mt-3">
                                    <hr class="my-auto flex-grow-1">
                                    <div class="px-4">OR</div>
                                    <hr class="my-auto flex-grow-1">
                                </div>
                                <div class="mt-2 anchorlink">
                                    <span class="text-muted">Login </span><a href="/login"
                                        style="text-decoration: none;">Click Here <i
                                            class="fas fa-long-arrow-alt-right"></i></a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--Card End-->
        </div>
    </div>
</header>

<%- include('partials/footer');-%>