<%- include('partials/header');-%>

    <header>
        <div class="row mx-auto my-5">
            <div class="col-md-8 mx-auto">
                <!--Card Start-->
                <div class="card shadow">
                    <div class="card-body p-5">
                        <div class="row">
                            <div class="col-md-6 my-5">
                                <img class="img-fluid" src="./img/secure_login.png" alt="Secure Login">
                            </div>
                            <div class="col-md-6 mt-5">
                                <h1 class="font-weight-bold">Login!</h1>
                                <% if(typeof alert !='undefined' ) { %>
                                    <% alert.forEach(function(error) { %>
                                        <div class="alert my-3 alert-warning alert-dismissible fade show" role="alert">
                                            <%= error.msg %>
                                                <button type="button" class="close" data-dismiss="alert"
                                                    aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                        </div>
                                        <% }) %>
                                            <% } %>


                                                <form action="/login" method="POST">
                                                    <div class="form-group">
                                                        <label for="exampleInputEmail1">Email</label>
                                                        <input type="email" name="email" class="form-control"
                                                            placeholder="Enter Your Email">
                                                    </div>
                                                    <div class="form-group">
                                                        <label>Password</label>
                                                        <input type="password" name="password" class="form-control"
                                                            placeholder="Enter Your Password">
                                                    </div>
                                                    <button type="submit"
                                                        class="btn btnrds btn-outline-primary btn-block rounded">Submit</button>
                                                    <div class="mt-2 anchorlink">
                                                        <span class="text-muted">Forgot </span><a href="/forgot"
                                                            style="text-decoration: none;">Username /
                                                            Password?</a>
                                                    </div>
                                                    <div class="d-flex mt-3">
                                                        <hr class="my-auto flex-grow-1">
                                                        <div class="px-4">OR</div>
                                                        <hr class="my-auto flex-grow-1">
                                                    </div>
                                                    <div class="my-5 anchorlink">
                                                        <span class="text-muted">Create </span><a href="/signup"
                                                            style="text-decoration: none;">your
                                                            Account <i class="fas fa-long-arrow-alt-right"></i></a>
                                                    </div>
                                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!--Card End-->
            </div>
        </div>
    </header>

    <%- include('partials/footer');-%>